<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VoiceTally4" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Venster / systeem bars -->
        <item name="android:windowBackground">@color/vt4_light_gray</item>
        <item name="android:statusBarColor">@color/vt4_light_gray</item>
        <item name="android:navigationBarColor">@color/vt4_light_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Material 3 surfaces -->
        <item name="colorSurface">@color/vt4_light_gray</item>
        <item name="colorOnSurface">@color/vt4_black</item>

        <!-- Tekst overal zwart -->
        <item name="android:textColorPrimary">@color/vt4_black</item>
        <item name="android:textColorSecondary">@color/vt4_black</item>
        <item name="android:textColorHint">@color/vt4_black</item>
        <item name="colorControlNormal">@color/vt4_black</item>
        <item name="colorControlActivated">@color/vt4_black</item>

        <!-- Tappable kleuren (inversie) -->
        <item name="colorTappableBg">@color/vt4_light_gray</item>
        <item name="colorTappableText">@color/vt4_black</item>
        <item name="colorTappableOutline">@color/vt4_outline</item>

        <!-- Jouw widget-stijlen -->
        <item name="materialButtonStyle">@style/Widget.VoiceTally4.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.VoiceTally4.Button.Outlined</item>
        <item name="materialCardViewStyle">@style/Widget.VoiceTally4.Card</item>
        <item name="textInputStyle">@style/Widget.VoiceTally4.TextInputLayout</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.VoiceTally4.AutoCompleteTextView</item>
        <item name="spinnerStyle">@style/Widget.VoiceTally4.Spinner</item>

        <!-- Globaal 6dp afgerond -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.VoiceTally4.Rounded6</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.VoiceTally4.Rounded6</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.VoiceTally4.Rounded6</item>
    </style>
</resources>
