<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:padding="16dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="?attr/colorTappableOutline"
    app:strokeWidth="@dimen/tappable_stroke_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Scrollbare content (knoppen vast onderaan) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/rootScroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Vrijstaande, gecentreerde titel -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="6dp"
                    android:text="Basisgegevens"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                <!-- Compacte datum/tijd rij -->
                <LinearLayout
                    android:id="@+id/dateTimeRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <!-- Datum (tap = datepicker) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDatum"
                        style="@style/Widget.VoiceTally4.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/meta_datum"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="?attr/colorTappableOutline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDatum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="12sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="1dp" />

                    <!-- Tijd (tap = custom spinner dialog) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTijd"
                        style="@style/Widget.VoiceTally4.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/meta_tijd"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="?attr/colorTappableOutline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTijd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:textSize="12sp"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Telpost -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelpost"
                    style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telpost"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/colorTappableOutline">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/acTelpost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:inputType="none"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tellers -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTellers"
                    style="@style/Widget.VoiceTally4.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teller(s)"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/colorTappableOutline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTellers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Kop 'Weergegevens' + vrije opmerking -->
                <LinearLayout
                    android:id="@+id/weerHeaderRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvWeergegevensTitel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:padding="4dp"
                        android:text="Weer :"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilWeerOpmerking"
                        style="@style/Widget.VoiceTally4.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Opmerking weer"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="?attr/colorTappableOutline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWeerOpmerking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:inputType="text"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Weervelden: 2 kolommen -->
                <LinearLayout
                    android:id="@+id/weerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Linker kolom -->
                    <LinearLayout
                        android:id="@+id/leftCol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Windrichting -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilWindrichting"
                            style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Windrichting"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/acWindrichting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:inputType="none"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Temperatuur -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTemperatuur"
                            style="@style/Widget.VoiceTally4.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Temperatuur (Â°C)"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTemperatuur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:inputType="numberDecimal"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Bewolking -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilBewolking"
                            style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bewolking (achtsten)"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/acBewolking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:inputType="none"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Zicht (meters) -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilZicht"
                            style="@style/Widget.VoiceTally4.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Zicht (m)"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etZicht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:inputType="number"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Rechter kolom -->
                    <LinearLayout
                        android:id="@+id/rightCol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="6dp">

                        <!-- Windkracht -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilWindkracht"
                            style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Windkracht (Bft)"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/acWindkracht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:inputType="none"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Neerslag -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilNeerslag"
                            style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Neerslag"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/acNeerslag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:inputType="none"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Luchtdruk -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilLuchtdruk"
                            style="@style/Widget.VoiceTally4.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Luchtdruk (hPa)"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorTappableOutline">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLuchtdruk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:inputType="numberDecimal"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Icoonknop met tekst 'Auto' (rechts, naast Zicht-rij) -->
                        <LinearLayout
                            android:id="@+id/weerIconRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="4dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnWeerIcon"
                                style="@style/Widget.VoiceTally4.Button.Outlined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Weer automatisch ophalen"
                                android:minWidth="36dp"
                                android:minHeight="36dp"
                                android:text="Auto"
                                app:icon="@drawable/ic_weather"
                                app:iconGravity="textStart"
                                app:iconPadding="6dp"
                                app:iconSize="20dp"
                                app:iconTint="@null" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- Type telling -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTypeTelling"
                    style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type telling"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/colorTappableOutline">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/acTypeTelling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:inputType="none"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Locatie type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLocatieType"
                    style="@style/Widget.VoiceTally4.TextInputLayout.ExposedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/meta_locatie_type"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/colorTappableOutline">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/acLocatieType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:inputType="none"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Opmerkingen -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOpmerkingen"
                    style="@style/Widget.VoiceTally4.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/meta_opmerkingen"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/colorTappableOutline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOpmerkingen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Onderste actiebalk -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnnuleer"
                style="@style/Widget.VoiceTally4.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:text="@string/annuleer" />

            <Space
                android:layout_width="6dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerder"
                style="@style/Widget.VoiceTally4.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:minHeight="36dp"
                android:text="@string/verder" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
